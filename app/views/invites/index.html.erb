<h1>Listing invites</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Invite email</th>
      <th>Created by</th>
      <th>Created date</th>
      <th>Updated by</th>
      <th>Updated date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invites.each do |invite| %>
      <tr>
        <td><%= invite.user_id %></td>
        <td><%= invite.invite_email_id %></td>
        <td><%= invite.created_by %></td>
        <td><%= invite.created_date %></td>
        <td><%= invite.updated_by %></td>
        <td><%= invite.updated_date %></td>
        <td><%= link_to 'Show', invite %></td>
        <td><%= link_to 'Edit', edit_invite_path(invite) %></td>
        <td><%= link_to 'Destroy', invite, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Invite', new_invite_path %>
